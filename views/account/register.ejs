<!-- views/account/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<h1><%= title %></h1>
<%- messages() %>
<main class="register-container"><!-- MQ4 Centering registration form -->
    <section class="register-section">
        <form action="/account/register" method="POST"><!-- MQ4 POST method for registration -->
            <label for="account_firstname">First Name:</label><!-- MQ4 required attribute -->
            <input type="text" id="account_firstname" name="account_firstname" required>

            <label for="account_lastname">Last Name:</label><!-- MQ4 required attribute -->
            <input type="text" id="account_lastname" name="account_lastname" required>

            <label for="account_email">Email:</label><!-- MQ4 required attribute -->
            <input type="email" id="account_email" name="account_email" required>

            <label for="account_password">Password:</label><!-- MQ4 pattern and required attributes -->
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
            <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

            <button type="submit">Register</button>
        </form>
    </section>
</main>
</body>
</html>
