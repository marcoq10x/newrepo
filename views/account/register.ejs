<!-- views/account/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <main class="register-container"><!-- MQ4 Centering registration form -->
        <section class="register-section">
            <h1><%= title %></h1>
            <%- messages() %>
            <form action="/account/register" method="POST">
                <label for="account_first_name">First Name:</label>
                <input type="text" id="account_first_name" name="account_first_name" required>

                <label for="account_last_name">Last Name:</label>
                <input type="text" id="account_last_name" name="account_last_name" required>

                <label for="account_email">Email:</label>
                <input type="email" id="account_email" name="account_email" required>

                <label for="account_password">Password:</label>
                <input type="password" id="account_password" name="account_password" required>

                <button type="submit">Register</button>
            </form>
        </section>
    </main>
</body>
</html>
